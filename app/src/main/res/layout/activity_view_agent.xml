<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ViewAgentActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            tools:context=".ui.activity.UserProfileActivity">

            <RelativeLayout
                android:padding="8dp"
                android:background="@drawable/rounded_corner"
                android:id="@+id/address_tv"
                android:layout_marginTop="55dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/age"
                    tools:text="24 yrs"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/phone"
                    tools:text="08123456789"
                    android:layout_below="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/address"
                    tools:text="13 mikel okpara avenue"
                    android:layout_below="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@+id/address"
                    android:layout_marginTop="20dp"
                    android:id="@+id/kin_details"
                    android:text="Next of Kin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/line1"
                    android:layout_below="@+id/kin_details"
                    android:background="@color/myBlack"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_below="@+id/line1"
                    tools:text="John Doe Jr"
                    android:layout_marginTop="10dp"
                    android:id="@+id/kin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/kin_phone"
                    android:layout_below="@+id/kin_name"
                    tools:text="07012345678"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/kin_address"
                    android:layout_below="@+id/kin_phone"
                    tools:text="14 New Heaven Enugu Road"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@+id/kin_address"
                    android:layout_marginTop="20dp"
                    android:id="@+id/trans_details"
                    android:text="Account Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/line2"
                    android:layout_below="@+id/trans_details"
                    android:background="@color/myBlack"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Username"
                    android:layout_below="@+id/line2"
                    android:id="@+id/username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:text="Password"
                    android:layout_below="@+id/line2"
                    android:id="@+id/password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    tools:text="emeka112"
                    android:layout_below="@+id/password_text"
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    tools:text="emekason"
                    android:layout_below="@+id/username_text"
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginTop="40dp"
                    android:textColor="@color/white"
                    android:text="View Transactions"
                    android:enabled="false"
                    android:id="@+id/view_btn"
                    android:layout_below="@+id/username"
                    android:background="@color/colorAccent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:text="View Clients"
                    android:enabled="false"
                    android:id="@+id/view_clients_btn"
                    android:layout_below="@+id/view_btn"
                    android:background="@color/colorAccent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:text="Edit account"
                    android:enabled="false"
                    android:id="@+id/edit_btn"
                    android:layout_below="@+id/view_clients_btn"
                    android:background="@color/colorAccent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:text="Delete account"
                    android:enabled="false"
                    android:id="@+id/delete_btn"
                    android:layout_below="@+id/edit_btn"
                    android:background="@color/red"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/profile_pic"
                app:layout_constraintStart_toStartOf="@id/address_tv"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/default_user"
                android:background="@drawable/rounded_corner"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="75dp"
                android:layout_height="90dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintStart_toEndOf="@+id/profile_pic"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="John Doe" />



        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>